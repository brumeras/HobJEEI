@page "/"
@using HobJeei.Models
@using HobJeei.Services
@rendermode InteractiveServer
@inject MockDataService DataService
@inject NavigationManager Navigation

<PageTitle>Discover - HobbyHub</PageTitle>

<div class="hero">
    <h1>Discover Your Next Hobby</h1>
    <p>Find and join local hobby groups in Vilnius</p>
</div>

<div class="filters">
    <div class="filter-group">
        <label>Hobby Type:</label>
        <select class="filter-select" @bind="selectedType" @bind:after="FilterGroups">
            <option value="">All Types</option>
            @foreach (var type in hobbyTypes)
            {
                <option value="@type">@type</option>
            }
        </select>

        <label>Distance:</label>
        <select class="filter-select" @bind="selectedDistance">
            <option value="0">Any Distance</option>
            <option value="1">Within 1 km</option>
            <option value="3">Within 3 km</option>
            <option value="5">Within 5 km</option>
        </select>

        <label>Max Price:</label>
        <input type="number" class="filter-input" @bind="maxPrice" @bind:after="FilterGroups" placeholder="€ per session" min="0" step="5">
    </div>
</div>

<div class="map-container">
    <h2>Hobbies Near You</h2>
    <div class="mock-map">
        <div style="transform: rotate(45deg);">📍 Interactive Map View</div>
        <div class="map-marker" style="top: 20%; left: 30%;"></div>
        <div class="map-marker" style="top: 40%; left: 60%;"></div>
        <div class="map-marker" style="top: 65%; left: 45%;"></div>
        <div class="map-marker" style="top: 50%; left: 75%;"></div>
    </div>
</div>

<h2 style="margin: 2rem 0 1rem 0;">Available Groups</h2>
<div class="groups-grid">
    @foreach (var group in filteredGroups)
    {
        <div class="group-card" @onclick="() => NavigateToGroup(group.Id)">
            <div class="group-header">
                <div class="group-name">@group.Name</div>
                <div class="hobby-badge">@group.HobbyType</div>
            </div>

            <div class="group-info">
                <div class="info-row">
                    <span class="icon">👤</span>
                    <span>Coach: @group.CoachName</span>
                </div>
                <div class="info-row">
                    <span class="icon">📍</span>
                    <span>@group.Location</span>
                </div>
                <div class="info-row">
                    <span class="icon">📅</span>
                    <span>@group.Schedule</span>
                </div>
                <div class="info-row">
                    <span class="icon">💰</span>
                    <span>€@group.Price per session</span>
                </div>
            </div>

            <div class="group-stats">
                <div class="stat">
                    <div class="stat-value">@group.CurrentMembers/@group.MaxMembers</div>
                    <div class="stat-label">Members</div>
                </div>
                <div class="stat">
                    <div class="stat-value">@group.UpcomingSessions.Count</div>
                    <div class="stat-label">Sessions</div>
                </div>
            </div>

            <button class="btn" @onclick:stopPropagation="true" @onclick="() => JoinGroup(group.Name)">
                Join Group
            </button>
        </div>
    }
</div>

@code {
    private List<HobbyGroup> allGroups = new();
    private List<HobbyGroup> filteredGroups = new();
    private List<string> hobbyTypes = new();
    
    private string selectedType = "";
    private int selectedDistance = 0;
    private decimal? maxPrice = null;

    protected override void OnInitialized()
    {
        allGroups = DataService.GetAllGroups();
        filteredGroups = allGroups;
        hobbyTypes = allGroups.Select(g => g.HobbyType).Distinct().ToList();
    }

    private void FilterGroups()
    {
        filteredGroups = allGroups.Where(g =>
            (string.IsNullOrEmpty(selectedType) || g.HobbyType == selectedType) &&
            (maxPrice == null || g.Price <= maxPrice)
        ).ToList();
    }

    private void NavigateToGroup(int id)
    {
        Navigation.NavigateTo($"/group/{id}");
    }

    private void JoinGroup(string groupName)
    {
        // Mock join action
    }
}

