@page "/group/{Id:int}"
@using HobJeei.Models
@using HobJeei.Services
@rendermode InteractiveServer
@inject MockDataService DataService
@inject NavigationManager Navigation

<PageTitle>@(group?.Name ?? "Group") - HobbyHub</PageTitle>

@if (group == null)
{
    <p>Loading...</p>
}
else
{
    <a href="/" class="back-btn">‚Üê Back to Groups</a>

    <div class="group-header-section">
        <h1 class="group-title">@group.Name</h1>
        <div class="group-meta">
            <div class="meta-item">
                <span>üë§</span>
                <span>Coach: @group.CoachName</span>
            </div>
            <div class="meta-item">
                <span>üìç</span>
                <span>@group.Location</span>
            </div>
            <div class="meta-item">
                <span>üìÖ</span>
                <span>@group.Schedule</span>
            </div>
            <div class="meta-item">
                <span>üí∞</span>
                <span>‚Ç¨@group.Price per session</span>
            </div>
        </div>
    </div>

    <div class="content-grid">
        <div class="main-content">
            <div class="card">
                <h2 class="card-title">üìÖ Upcoming Sessions</h2>
                <div class="sessions-list">
                    @foreach (var session in group.UpcomingSessions)
                    {
                        <div class="session-card">
                            <div class="session-date">@session.DateTime.ToString("dddd, MMMM dd, yyyy - HH:mm")</div>
                            <div style="color: var(--text-light);">@session.Location</div>

                            <div style="margin-top: 1rem;">
                                <strong>Your Attendance:</strong>
                                <div class="attendance-buttons">
                                    <button class="attendance-btn @(currentAttendance == AttendanceStatus.Going ? "going" : "")"
                                            @onclick="() => SetAttendance(session.Id, AttendanceStatus.Going)">
                                        ‚úì Going
                                    </button>
                                    <button class="attendance-btn @(currentAttendance == AttendanceStatus.Maybe ? "maybe" : "")"
                                            @onclick="() => SetAttendance(session.Id, AttendanceStatus.Maybe)">
                                        ? Maybe
                                    </button>
                                    <button class="attendance-btn @(currentAttendance == AttendanceStatus.Cant ? "cant" : "")"
                                            @onclick="() => SetAttendance(session.Id, AttendanceStatus.Cant)">
                                        ‚úó Can't
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <h2 class="card-title">üí¨ Group Chat</h2>
                <div class="chat-container">
                    <div class="chat-messages">
                        @foreach (var msg in group.Messages)
                        {
                            <div class="message @(msg.IsCoach ? "coach" : "member")">
                                <div class="message-sender">@msg.SenderName</div>
                                <div class="message-text">@msg.Message</div>
                                <div class="message-time">@msg.Timestamp.ToString("HH:mm")</div>
                            </div>
                        }
                    </div>
                    <div class="chat-input-area">
                        <input type="text" class="chat-input" @bind="newMessage" @bind:event="oninput"
                               @onkeydown="HandleKeyPress" placeholder="Type your message...">
                        <button class="send-btn" @onclick="SendMessage">Send</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="sidebar">
            <div class="card">
                <h2 class="card-title">üë• Members (@group.Members.Count)</h2>
                <div class="members-list">
                    @foreach (var member in group.Members)
                    {
                        <div class="member-item">
                            <div class="member-info">
                                <div class="member-avatar">@member.Name.Substring(0, 1)</div>
                                <div>
                                    <div style="font-weight: 600;">@member.Name</div>
                                    <div style="font-size: 0.875rem; color: var(--text-light);">
                                        @GetStatusText(member.Status)
                                    </div>
                                </div>
                            </div>
                            @if (member.AvailableForSubstitute)
                            {
                                <span style="font-size: 0.75rem; color: var(--success);">üì≤ Sub available</span>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (showNotification)
    {
        <div class="notification">
            <div class="notification-title">@notificationTitle</div>
            <div>@notificationMessage</div>
            @if (notificationSubList != null && notificationSubList.Any())
            {
                <ul style="margin: 0.5rem 0; padding-left: 1.5rem;">
                    @foreach (var sub in notificationSubList)
                    {
                        <li>@sub</li>
                    }
                </ul>
            }
        </div>
    }
}

@code {
    [Parameter]
    public int Id { get; set; }

    private HobbyGroup? group;
    private AttendanceStatus currentAttendance = AttendanceStatus.NotSet;
    private string newMessage = "";
    private bool showNotification = false;
    private string notificationTitle = "";
    private string notificationMessage = "";
    private List<string>? notificationSubList = null;

    protected override void OnInitialized()
    {
        group = DataService.GetGroupById(Id);
        if (group == null)
        {
            Navigation.NavigateTo("/");
        }
    }

    private void SetAttendance(int sessionId, AttendanceStatus status)
    {
        currentAttendance = status;
        
        // In a real app, this would update the backend
        // DataService.UpdateAttendance(Id, sessionId, currentUserId, status);
        
        if (status == AttendanceStatus.Cant)
        {
            ShowSubstituteNotification();
        }
        else
        {
            ShowStatusNotification(status);
        }
    }

    private void ShowStatusNotification(AttendanceStatus status)
    {
        var statusText = status switch
        {
            AttendanceStatus.Going => "‚úì Going",
            AttendanceStatus.Maybe => "? Maybe",
            AttendanceStatus.Cant => "‚úó Can't attend",
            _ => "Updated"
        };

        notificationTitle = "Attendance Updated";
        notificationMessage = $"Your status has been set to: {statusText}";
        notificationSubList = null;
        showNotification = true;
        StateHasChanged();

        Task.Delay(3000).ContinueWith(_ =>
        {
            showNotification = false;
            InvokeAsync(StateHasChanged);
        });
    }

    private void ShowSubstituteNotification()
    {
        var availableSubs = group?.Members
            .Where(m => m.AvailableForSubstitute)
            .Select(m => m.Name)
            .ToList() ?? new List<string>();

        notificationTitle = "üîî Substitute Request Sent";
        notificationMessage = "We've notified available members who can fill your spot:";
        notificationSubList = availableSubs;
        showNotification = true;
        StateHasChanged();

        Task.Delay(5000).ContinueWith(_ =>
        {
            showNotification = false;
            InvokeAsync(StateHasChanged);
            
            // Show substitute accepted notification
            Task.Delay(3000).ContinueWith(__ =>
            {
                notificationTitle = "‚úÖ Substitute Found!";
                notificationMessage = $"{availableSubs.FirstOrDefault() ?? "A member"} has accepted to fill your spot.";
                notificationSubList = null;
                showNotification = true;
                InvokeAsync(StateHasChanged);
                
                Task.Delay(5000).ContinueWith(___ =>
                {
                    showNotification = false;
                    InvokeAsync(StateHasChanged);
                });
            });
        });
    }

    private void SendMessage()
    {
        if (!string.IsNullOrWhiteSpace(newMessage) && group != null)
        {
            DataService.AddMessage(Id, "You", newMessage, false);
            newMessage = "";
            group = DataService.GetGroupById(Id); // Refresh
            StateHasChanged();
        }
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            SendMessage();
        }
    }

    private string GetStatusText(AttendanceStatus status)
    {
        return status switch
        {
            AttendanceStatus.Going => "‚úì Going",
            AttendanceStatus.Maybe => "? Maybe",
            AttendanceStatus.Cant => "‚úó Can't",
            _ => "No response"
        };
    }
}

