@page "/profile"
@rendermode InteractiveServer

<PageTitle>Profile - HobbyHub</PageTitle>

<div class="profile-container">
    <h1>User Profile</h1>
    
    <div class="card">
        <h2>Personal Information</h2>
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-input" value="John Doe" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-input" value="john@email.com" />
        </div>
    </div>

    <div class="card">
        <h2>Substitute Availability</h2>
        <p style="color: var(--text-light); margin-bottom: 1rem;">
            Select time slots when you're available to fill in as a substitute.
        </p>
        <div class="checkbox-group">
            <label>
                <input type="checkbox" /> Monday 18:00 - 20:00
            </label>
            <label>
                <input type="checkbox" checked /> Wednesday 19:00 - 21:00
            </label>
            <label>
                <input type="checkbox" /> Thursday 20:00 - 22:00
            </label>
        </div>
    </div>

    <button class="btn">Save Changes</button>
</div>

<style>
    .profile-container {
        max-width: 800px;
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
    }

    h2 {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .card {
        background: var(--card-bg);
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid var(--border);
        border-radius: 8px;
        font-size: 1rem;
    }

    .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .checkbox-group label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
    }

    .btn {
        padding: 0.75rem 2rem;
        background: var(--primary);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn:hover {
        background: var(--primary-dark);
    }
</style>