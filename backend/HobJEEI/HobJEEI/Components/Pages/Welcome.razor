@page "/welcome"
@using HobJeei.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Welcome - HobJEEI</PageTitle>

<div class="welcome-container">
    @if (userType == "Company")
    {
        <div class="welcome-card">
            <div class="welcome-icon">üè¢</div>
            <h1>Welcome, @companyName!</h1>
            <p class="welcome-message">Be ready to upload your business</p>
            <p class="welcome-description">
                You can now create and manage hobby groups for your business. 
                Start by uploading your first group and connecting with customers.
            </p>
            <div class="action-buttons">
                <button class="btn-primary" @onclick="GoToDashboard">Go to Dashboard</button>
                <button class="btn-secondary" @onclick="Logout">Logout</button>
            </div>
        </div>
    }
    else if (userType == "Customer")
    {
        <div class="welcome-card">
            <div class="welcome-icon">üë§</div>
            <h1>Welcome, @customerName!</h1>
            <p class="welcome-message">Welcome as client</p>
            <p class="welcome-description">
                Explore hobby groups, join sessions, and connect with other enthusiasts. 
                Your journey to new hobbies starts here!
            </p>
            <div class="action-buttons">
                <button class="btn-primary" @onclick="GoToDashboard">Explore Groups</button>
                <button class="btn-secondary" @onclick="Logout">Logout</button>
            </div>
        </div>
    }
    else
    {
        <div class="welcome-card">
            <p>Loading...</p>
        </div>
    }
</div>

@code {
    private string? userType;
    private string? companyName;
    private string? customerName;

    protected override void OnInitialized()
    {
        var (userId, type) = AuthService.GetCurrentUser();
        
        if (!userId.HasValue)
        {
            Navigation.NavigateTo("/login", forceLoad: true);
            return;
        }

        userType = type;
        
        if (userType == "Company")
        {
            companyName = AuthService.GetCompanyName() ?? "Company";
        }
        else if (userType == "Customer")
        {
            customerName = AuthService.GetCustomerName() ?? "Customer";
        }
    }

    private void GoToDashboard()
    {
        Navigation.NavigateTo("/", forceLoad: true);
    }

    private void Logout()
    {
        AuthService.ClearUserSession();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}

<style>
    .welcome-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
    }

    .welcome-card {
        background: white;
        border-radius: 16px;
        padding: 3rem;
        max-width: 600px;
        width: 100%;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
    }

    .welcome-icon {
        font-size: 5rem;
        margin-bottom: 1.5rem;
        animation: bounce 1s ease-in-out;
    }

    @@keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }

    .welcome-card h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: #1f2937;
    }

    .welcome-message {
        font-size: 1.5rem;
        color: #6366f1;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .welcome-description {
        color: #6b7280;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary, .btn-secondary {
        padding: 0.875rem 2rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background: #6366f1;
        color: white;
    }

    .btn-primary:hover {
        background: #4f46e5;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
    }

    .btn-secondary {
        background: white;
        color: #6366f1;
        border: 2px solid #6366f1;
    }

    .btn-secondary:hover {
        background: #f3f4f6;
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .welcome-card {
            padding: 2rem;
        }

        .welcome-card h1 {
            font-size: 2rem;
        }

        .welcome-message {
            font-size: 1.2rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-primary, .btn-secondary {
            width: 100%;
        }
    }
</style>