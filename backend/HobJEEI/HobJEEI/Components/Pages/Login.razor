@page "/login"
@layout AuthLayout
@using HobJeei.Services
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Login - HobJEEI</PageTitle>

<div class="login-container">
    <div class="login-card">
        <div class="logo-section">
            <span class="logo-icon">üéØ</span>
            <h1>Welcome Back</h1>
        </div>
        <p class="subtitle">Login to your account</p>

        <div class="account-type-selector">
            <button class="type-btn @(selectedType == "company" ? "active" : "")" 
                    @onclick="@(() => SelectType("company"))">
                <span class="icon">üè¢</span>
                <span>Company</span>
            </button>
            <button class="type-btn @(selectedType == "customer" ? "active" : "")" 
                    @onclick="@(() => SelectType("customer"))">
                <span class="icon">üë§</span>
                <span>Customer</span>
            </button>
        </div>

        <div class="form-section">
            <div class="form-group">
                <label>Email</label>
                <input type="email" 
                       @bind="email" 
                       @bind:event="oninput"
                       placeholder="your@email.com" 
                       @onkeypress="HandleKeyPress" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" 
                       @bind="password" 
                       @bind:event="oninput"
                       placeholder="Enter your password" 
                       @onkeypress="HandleKeyPress" />
            </div>
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">
                    <span>‚ö†Ô∏è</span>
                    <span>@errorMessage</span>
                </div>
            }
            
            <button class="submit-btn" @onclick="HandleLogin" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>üîÑ Logging in...</span>
                }
                else
                {
                    <span>Login</span>
                }
            </button>
        </div>

        <div class="register-link">
            <p>Don't have an account? <a href="/register">Register here</a></p>
        </div>
    </div>
</div>

@code {
    private string selectedType = "customer";
    private string email = "";
    private string password = "";
    private bool isLoading = false;
    private string errorMessage = "";

    protected override void OnInitialized()
    {
        var (userId, _) = AuthService.GetCurrentUser();
        if (userId.HasValue)
        {
            Navigation.NavigateTo("/welcome", forceLoad: true);
        }
    }

    private void SelectType(string type)
    {
        selectedType = type;
        errorMessage = "";
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLoading)
        {
            _ = HandleLogin(); // Fire and forget pattern
        }
    }

    private async Task HandleLogin()
    {
        errorMessage = "";
        
        if (string.IsNullOrWhiteSpace(email) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Please enter both email and password.";
            return;
        }

        isLoading = true;
        StateHasChanged();
        
        try
        {
            if (selectedType == "company")
            {
                var company = await AuthService.LoginCompanyAsync(email, password);
                if (company != null)
                {
                    AuthService.SetUserSession(company);
                    await Task.Delay(100);
                    Navigation.NavigateTo("/welcome", forceLoad: true);
                }
                else
                {
                    errorMessage = "Invalid email or password.";
                    isLoading = false;
                    StateHasChanged();
                }
            }
            else
            {
                var customer = await AuthService.LoginCustomerAsync(email, password);
                if (customer != null)
                {
                    AuthService.SetUserSession(customer);
                    await Task.Delay(100);
                    Navigation.NavigateTo("/welcome", forceLoad: true);
                }
                else
                {
                    errorMessage = "Invalid email or password.";
                    isLoading = false;
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred during login. Please try again.";
            isLoading = false;
            StateHasChanged();
        }
    }
}

