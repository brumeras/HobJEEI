@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --secondary: #8b5cf6;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --bg: #f9fafb;
        --card-bg: #ffffff;
        --text: #1f2937;
        --text-light: #6b7280;
        --border: #e5e7eb;
    }

    html, body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
        background: var(--bg);
        color: var(--text);
        line-height: 1.6;
        height: 100%;
    }

    .page {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 250px;
        background: var(--card-bg);
        box-shadow: 2px 0 8px rgba(0,0,0,0.05);
        overflow-y: auto;
    }

    main {
        flex: 1;
        overflow-y: auto;
    }

    .content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    @media (max-width: 768px) {
        .page {
            flex-direction: column;
        }

        .sidebar {
            width: 100%;
            height: auto;
        }
    }
</style>